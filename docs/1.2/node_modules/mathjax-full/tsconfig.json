{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "downlevelIteration": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "lib": ["es6", "dom"],
    "noLib": false,
    "sourceMap": true,
    "outDir": "js"
  },
  "include": ["ts/**/*"],
  "exclude": ["js", "es5", "components"]
}
